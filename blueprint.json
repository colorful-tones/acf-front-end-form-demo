{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "meta": {
    "title": "ACF front-end form demo",
    "description": "A demo enviroment for ACF front-end forms.",
    "author": "Damon Cook",
    "categories": [
      "theme",
      "demo"
    ]
  },
  "landingPage": "new-recipe/",
  "preferredVersions": {
    "php": "8.2",
    "wp": "6.6"
  },
  "features": {
    "networking": true
  },
  "phpExtensionBundles": [
    "kitchen-sink"
  ],
  "steps": [
    {
        "step": "resetData"
    },
    {
        "step": "setSiteOptions",
        "options": {
            "blogname": "ACF Recipes",
            "blogdescription": "A demo site for ACF front-end forms."
        }
    },
    {
        "step": "installTheme",
        "themeZipFile": {
            "resource": "wordpress.org/themes",
            "slug": "twentynineteen"
        },
        "options": {
            "activate": false
        }
    },
    {
        "step": "installPlugin",
        "pluginZipFile": {
            "resource": "wordpress.org/plugins",
            "slug": "advanced-custom-fields"
        }
    },
    {
      "step": "installTheme",
      "themeZipFile": {
        "resource": "url",
        "url": "https://github-proxy.com/proxy/?repo=colorful-tones/acf-front-end-form-demo&release=v1.0.0&asset=ttnineteen-child_v1.0.0.zip"
      }
    },
    {
        "step": "writeFile",
        "path": "/wordpress/wp-content/mu-plugins/rewrite.php",
        "data": "<?php /* Use pretty permalinks */ add_action( 'after_setup_theme', function() { global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); $wp_rewrite->flush_rules(); } );"
    },
    {
      "step": "updateUserMeta",
      "meta": {
        "admin_color": "modern"
      },
      "userId": 1
    },
    {
      "step": "login",
      "username": "admin",
      "password": "password"
    },
    {
      "step": "wp-cli",
      "command": "wp post create --post_type=page --post_title='New Recipe' --post_status=publish"
    },
    {
      "step": "wp-cli",
      "command": "wp widget reset --all"
    }
  ]
}